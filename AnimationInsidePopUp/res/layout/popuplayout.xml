<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_popup"
    android:orientation="vertical" >

    <com.animation.inside.popup.AnimatingRelativeLayout
        android:id="@+id/rltvltTopHeader"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_gravity="top"
        android:background="@android:color/black" >

        <com.animation.inside.popup.AnimatingRelativeLayout
            android:id="@+id/rltvHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" >

            <TextView
                android:id="@+id/lbl_Header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PopUp"
                android:textColor="@android:color/white"
                android:textSize="17sp"
                android:textStyle="bold" />
        </com.animation.inside.popup.AnimatingRelativeLayout>

        <com.animation.inside.popup.AnimatingRelativeLayout
            android:id="@+id/rltvBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:visibility="gone" >

            <Button
                android:id="@+id/btnBackPopUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back" />
        </com.animation.inside.popup.AnimatingRelativeLayout>
    </com.animation.inside.popup.AnimatingRelativeLayout>

    <com.animation.inside.popup.AnimatingRelativeLayout
        android:id="@+id/llPopUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible" >

        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Custom View" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn1"
            android:text="List Navigate" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn2"
            android:text="Done" />
    </com.animation.inside.popup.AnimatingRelativeLayout>

    <com.animation.inside.popup.AnimatingRelativeLayout
        android:id="@+id/llCustomViewPopUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:id="@+id/txtvwCustomViewPopUp"
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:layout_alignParentTop="true" />

        <Button
            android:id="@+id/btnCustomViewPopUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtvwCustomViewPopUp"
            android:layout_gravity="right"
            android:text="Done!" />
    </com.animation.inside.popup.AnimatingRelativeLayout>

    <com.animation.inside.popup.AnimatingRelativeLayout
        android:id="@+id/llListPopUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" >

        <ListView
            android:id="@+id/lstvwPopUp"
            android:layout_width="180dip"
            android:layout_height="wrap_content" />
    </com.animation.inside.popup.AnimatingRelativeLayout>

</LinearLayout>